<% if @article.errors.any? %>
<h2>Errors :</h2>
<% @article.errors.full_messages.each do |msg| %>
  <div class="alert alert-warning">
    <%= msg %>
  </div>
<% end %>
<% end %>

<div class="row">
  <div class="col-xs-12">
  <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control col-sm-2">
        <%= f.label :title %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :title , class: "form-control", placeholder: "Title of article", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control col-sm-2">
        <%= f.label :description %>
      </div>
      <div class="col-sm-8">
        <%= f.text_area :description,rows: 10, class: "form-control", placeholder: "Description of article", autofocus: true %>
      </div>
    </div>
    <div clas="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: "btn btn-primary btn-lg" %>
        <%=link_to 'Back to article listing', articles_path, class: "btn btn-primary btn-lg" %>
      </div>

    </div>
      
    
  <% end %>
  <!--
  <div class="well well-sm">
    
  </div>
   --> 
  </div>
</div>