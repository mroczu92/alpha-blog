<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
  <% @article.errors.full_messages.each do |msg| %>
  <h2>ERRORS</h2>
  <ul>
    <li>
      <%= msg %>
    </li>
  </ul>
  <% end %>
  <% end %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit %>
  </p>

<% end %>

<%=link_to 'Back to article listing', articles_path %>