<div class="container">
<div class="header">
  <center>
 <table>
   <td>
     <%=image_tag 'rails.png' %>
     <td>
       <p class="title" style="font-size: 74px; margin-left: 65px;">
         Ruby on Rails<br>
         projects
       </p>
     </td>
   </td>
 </table>
 </center>
 
<div class="content">
  <hr>
  <div class="menu">
    <%=link_to 'Home', root_path %>
    <%=link_to 'About', about_path %>
    <%=link_to 'Artykuly', articles_path %>
  </div>
  <hr>
  <h1>Listed all articles</h1>
  <p><%=link_to 'Create new article', new_article_path %></p>
  

  

  <% @articles.reverse.each do |article| %>
  <table class="articles">
    <tr>
      <td style="width: 300px"><h2><%=article.title %></h2></td>
      <td class="crud">
        <h4>
        <%=link_to 'Show', article_path(article) %>
        <%=link_to 'Edit', edit_article_path(article) %>
        <%=link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are you sure?"} %>
        </h4>
      </td>
      
    
    </tr>
    <tr>
      <td><p><%=article.description %></p></td>
    </tr>
  </table>
  <% end %>
</div>
</div>
</div>


  