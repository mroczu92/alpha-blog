<h1 class="well well-sm col-sm-8 col-sm-offset-2" align="center"><%= @article.title %></h1>

<div class="panel panel-default col-sm-8 col-sm-offset-2" id="show_article">
  <div class="panel-heading">
    <h3 class="panel-title"><strong>Description :</strong></h3>
  </div>
  <div class="panel-body">
    <%= @article.description %>
  </div>
  
</div>
<div class="well well-sm col-sm-8 col-sm-offset-2">
<%=link_to 'Edit this article', edit_article_path(@article), class: "btn btn-xs btn-primary" %>
<%=link_to 'Back to article listing', articles_path, class: "btn btn-xs btn-primary" %>
<%=link_to 'Delete this article', article_path(@article), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-danger", style: "float: right" %>
</div>